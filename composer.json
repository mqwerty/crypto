{
  "name": "mqwerty/crypto",
  "license": "MIT",
  "description": "OpenSSL encoder/decoder",
  "keywords": ["openssl", "cryptography"],
  "authors": [
    {
      "name": "Dmitrii Elkin",
      "email": "de@mqwerty.ru"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Mqwerty\\": "src"
    }
  },
  "require": {
    "php": ">=7.4",
    "ext-openssl": "*"
  },
  "require-dev": {
    "phan/phan": "^5.1",
    "phpmd/phpmd": "^2.8",
    "phpunit/phpunit": "^9.2",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "replace": {
    "symfony/polyfill-php73": "*"
  },
  "scripts": {
    "test": "phpunit",
    "test:cover": "phpunit --coverage-text",
    "stan:md": "phpmd ./src ansi ./phpmd.xml",
    "stan:phan": "phan --color --progress-bar --allow-polyfill-parser",
    "cs:check": "phpcs ./src --standard=PSR12",
    "cs:fix": "phpcbf ./src --standard=PSR12",
    "check": [
      "@cs:check",
      "@stan:md",
      "@stan:phan",
      "@test"
    ]
  }
}
